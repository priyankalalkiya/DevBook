<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        h2 {
            color: orange;
            margin-top: 30px;
            margin-bottom: 20px;
        }

        #map {
            height: 400px;
            width: 100%;
            margin-bottom: 20px;
        }

        .main-container {
            display: flex;
            justify-content: space-between;
            margin-top: 50px;
        }

        .right-container {
            flex: 0 0 60%;
        }

        .form-contact {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .input-container {
            margin-bottom: 20px;
        }

            .input-container label {
                font-weight: bold;
            }

            .input-container input,
            .input-container textarea {
                width: 100%;
                padding: 10px;
                margin-top: 5px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .input-container textarea {
                resize: vertical;
            }

        .error {
            color: red;
        }

        button[type='submit'] {
            background-color: orange;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button[type='submit']:hover {
                background-color: darkorange;
            }
    </style>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DevBook</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Developer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index">Posts</a>
                </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="ContectUS" asp-action="Index">Contact Us</a>
                    </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Signin" asp-action="Index">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>



<div class='main-container'>
    <div id="map"></div>
    <div class='right-container'>
        <h1>Send us a Message!</h1>
        <form class='form-contact' asp-action="Index" asp-controller="Contact" method="post">
            <div class="input-container">
                <label for="fullName">Full Name:</label>
                <input id="fullName" name='fullName' type='text' placeholder='Enter your full name'
                       required />


                <label for="email">Email:</label>
                <input id="email" name='email' type='email' placeholder='Enter your email'
                       required />

                <label for="subject">Subject:</label>
                <input id="subject" name='subject' type='text' placeholder='Enter the subject'
                       required />
                <span class='error'></span>

                <label for="message">Message:</label>
                <textarea id="message" name='message' placeholder='Enter your message' rows='4' maxlength='100'
                          required></textarea>
                <span class='error'></span>
            </div>
            <button type='submit'>Send</button>
        </form>
    </div> <!-- Closing right-container -->
</div> <!-- Closing main-container -->
<!-- Google Maps JavaScript API -->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCdzRGfBn-L-9dImWXxamhLkZPtpQNZjMI&callback=initMap" async defer></script>
<script>
    function initMap() {
        // Center coordinates
        var center = { lat: 23.34793076844109, lng: 70.25678451534345 };

        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
            center: center,
            zoom: 15 // You can adjust the zoom level as needed
        });

        // Create a marker and set its position.
        var marker = new google.maps.Marker({
            map: map,
            position: center,
            title: 'Your Location'
        });
    }
</script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
